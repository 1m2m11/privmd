      const yamlHeader = `---
title: "${metadata?.title}"
author: "${metadata?.author}"
created: "${metadata?.created}"
modified: "${metadata?.modified}"
pages: ${metadata?.pages}
producer: "${metadata?.producer}"
---

`;
      result = yamlHeader + result;
      result = applyRedactions(result);
      const processingTime = ((Date.now() - startTime) / 1000).toFixed(1);
      result = `${result}\n\n---\n\n*Converted ${pdfDoc.numPages} pages in ${processingTime}s*`;
      setText(result);
    } catch (err) {
      console.error("Convert error:", err);
      setError("Failed to convert PDF");
    } finally {
      setLoading(false);
    }
  }
  function cleanMarkdown(text: string): string {
    let cleaned = text;
    cleaned = cleaned.replace(/[ \t]+/g, ' ');
    cleaned = cleaned.replace(/\n{3,}/g, '\n\n');
    cleaned = cleaned.replace(/^[‚Ä¢‚óè‚óã‚ó¶‚ñ™‚ñ´-]\s+/gm, '- ');
    cleaned = cleaned.replace(/^(\d+)\.\s+/gm, '$1. ');
    cleaned = cleaned.replace(/^([A-Z][A-Z\s]{10,})$/gm, (match) => `### ${match.trim()}`);
    cleaned = cleaned.replace(/\n(#{1,6}\s)/g, '\n\n$1');
    cleaned = cleaned.replace(/(#{1,6}\s[^\n]+)\n/g, '$1\n\n');
    return cleaned.trim();
  }

